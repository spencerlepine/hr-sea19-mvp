{
  "name": "server",
  "version": "1.0.0",
  "description": "Server for Fullstack MVP project from Hack Reactor",
  "main": "src/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spencerlepine/hr-sea19-mvp.git"
  },
  "keywords": [],
  "author": "Spencer Lepine",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/spencerlepine/hr-sea19-mvp/issues"
  },
  "homepage": "https://github.com/spencerlepine/hr-sea19-mvp#readme",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "server:dev": "nodemon src/index.js",
    "lint:check": "eslint . --ext .js"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^5.4.1",
    "faker": "^5.5.3",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "joi": "^17.4.2",
    "mongoose": "^6.0.10",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.13",
    "supertest": "^6.1.6",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2015": true
    },
    "ignorePatterns": [],
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-undef": "off",
      "no-unused-vars": "off"
    }
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "testEnvironmentOptions": {
      "NODE_ENV": "test"
    },
    "restoreMocks": true,
    "coveragePathIgnorePatterns": [
      "node_modules",
      "src/config",
      "src/app.js",
      "tests"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "clover",
      "html"
    ]
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3"
  }
}